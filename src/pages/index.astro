---
import BaseLayout from "../layouts/BaseLayout.astro";
import CTAButtons from "../components/CTAButtons.astro";
import ComparisonMini from "../components/ComparisonMini.astro";
import ProductCards from "../components/ProductCards.astro";
import LogoStrip from "../components/LogoStrip.astro";
import FAQ from "../components/FAQ.astro";

const title = "AutoCAD alternatifi CADian – Hızlı, Uyumlu, Ekonomik | cadian.com.tr";
const description =
  "AutoCAD benzeri program CADian; yerel DWG formatında, tanıdık bir arayüz ve bilinen komutlarla 2D veya 3D projelerinizde hızlı çalışmanızı sağlar. Donmayan güçlü AutoCAD alternatifi ile tanışın.";
---

<BaseLayout title={title} description={description}>
  <section class="hero">
    <div class="left">
      <div class="pill">AutoCAD Alternatifi • Yerel DWG • Tanıdık Arayüz</div>

      <h1 class="h1">
        AutoCAD alternatifi CADian –
        <span class="grad">Hızlı, Uyumlu, Ekonomik</span>
      </h1>

      <p class="lead">
        <strong>Hızlı ve Güçlü AutoCAD Alternatifi.</strong><br />
        AutoCAD benzeri program <strong>CADian</strong>; 2D veya 3D projeleriniz için yerel DWG formatında,
        tanıdık bir arayüz ve bilinen komutlarla çalışılmasını sağlar.
        Hızlı ve donmayan, en güçlü AutoCAD Alternatifi ile tanışın!
      </p>

      <CTAButtons />

      <div class="trust">
        <span>✓ Kalıcı Lisans</span>
        <span>✓ %100 DWG Uyumu</span>
        <span>✓ Teknik Destek</span>
        <span>✓ Teklif ile fiyat</span>
      </div>
    </div>

    <div class="right">
      <div class="shot">
        <div class="shotTop">
          <span class="dot r"></span><span class="dot y"></span><span class="dot g"></span>
          <span class="shotTitle">CADian 2026 — ekran görüntüsü alanı</span>
        </div>
        <div class="shotBody">
          <div class="ph">Buraya CADian ekran görüntüsü koyacağız.</div>
          <div class="muted small">Görseli gönderdiğinde bu alanı gerçek görselle değiştiriyorum.</div>
        </div>
      </div>
    </div>
  </section>

  <section class="section">
    <LogoStrip />
  </section>

  <section class="section">
    <ComparisonMini />
  </section>

  <section class="section">
    <ProductCards />
  </section>

  <section class="section">
    <FAQ />
  </section>

  <section class="section card ctaBand">
    <div>
      <div class="ctaTitle">Teklif alalım, doğru lisansı seçelim</div>
      <div class="muted" style="margin-top:6px;">Kullanıcı sayısı ve lisans tipine göre en doğru öneri + teklif.</div>
    </div>
    <CTAButtons compact={true} />
  </section>

  <style>
    .hero{display:grid; grid-template-columns: 1.15fr .85fr; gap: 18px; align-items:stretch;}
    .grad{
      background: linear-gradient(90deg, rgba(110,231,255,.95), rgba(167,139,250,.95));
      -webkit-background-clip:text; background-clip:text; color: transparent;
    }
    .trust{display:flex; gap: 12px; flex-wrap:wrap; margin-top: 16px; color: rgba(231,234,240,.78); font-size: 13.5px;}
    .right{display:flex; align-items:stretch;}

    .shot{
      width:100%;
      background: linear-gradient(180deg, rgba(255,255,255,.08), rgba(255,255,255,.04));
      border: 1px solid rgba(255,255,255,.12);
      border-radius: 18px;
      box-shadow: 0 18px 60px rgba(0,0,0,.45);
      overflow:hidden;
    }
    .shotTop{
      height: 44px; display:flex; align-items:center; gap: 8px;
      padding: 0 14px;
      border-bottom: 1px solid rgba(255,255,255,.10);
      background: rgba(0,0,0,.16);
    }
    .dot{width:10px; height:10px; border-radius:999px; display:inline-block;}
    .dot.r{background:#ff5f56}
    .dot.y{background:#ffbd2e}
    .dot.g{background:#27c93f}
    .shotTitle{margin-left: 8px; font-size: 13px; color: rgba(231,234,240,.75);}
    .shotBody{padding: 14px;}
    .ph{
      height: 260px;
      border-radius: 16px;
      border: 1px dashed rgba(255,255,255,.18);
      background: rgba(255,255,255,.03);
      display:flex; align-items:center; justify-content:center;
      color: rgba(231,234,240,.72);
      text-align:center;
      padding: 18px;
    }
    .small{font-size: 13px; margin-top: 10px;}

    .ctaBand{
      display:flex; align-items:center; justify-content:space-between;
      gap: 14px;
      padding: 16px;
    }
    .ctaTitle{font-weight: 950; font-size: 18px; letter-spacing:-.01em;}

    @media (max-width: 920px){
      .hero{grid-template-columns: 1fr;}
      .ctaBand{flex-direction:column; align-items:flex-start;}
    }
  </style>
</BaseLayout>
