---
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";

const {
  title = "CADian – AutoCAD Alternatifi",
  description = "AutoCAD benzeri program CADian; yerel DWG formatında, tanıdık arayüz ve bilinen komutlarla 2D/3D projelerinizde hızlı çalışın.",
  canonical = "",
  noindex = false,
} = Astro.props;

const siteName = "CADian";
const ogTitle = title;
const ogDesc = description;
const canonicalUrl = canonical || Astro.url.href;
---

<!doctype html>
<html lang="tr">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width,initial-scale=1" />
    <title>{title}</title>
    <meta name="description" content={description} />
    <link rel="canonical" href={canonicalUrl} />
    {noindex ? <meta name="robots" content="noindex,nofollow" /> : null}

    <meta property="og:type" content="website" />
    <meta property="og:site_name" content={siteName} />
    <meta property="og:title" content={ogTitle} />
    <meta property="og:description" content={ogDesc} />
    <meta property="og:url" content={canonicalUrl} />

    <style>
      :root{
        --bg:#0b1220;
        --bg2:#050914;
        --card: rgba(255,255,255,.06);
        --card2: rgba(255,255,255,.09);
        --text:#e7eaf0;
        --muted: rgba(231,234,240,.72);
        --line: rgba(255,255,255,.12);
        --accent: #6ee7ff;
        --accent2:#a78bfa;
        --shadow: 0 12px 40px rgba(0,0,0,.45);
        --r: 18px;
      }
      *{box-sizing:border-box}
      html,body{height:100%}
      body{
        margin:0;
        font-family: ui-sans-serif, system-ui, -apple-system, Segoe UI, Roboto, Arial, "Apple Color Emoji","Segoe UI Emoji";
        color: var(--text);
        background:
          radial-gradient(900px 480px at 20% -10%, rgba(110,231,255,.18), transparent 55%),
          radial-gradient(900px 520px at 90% 10%, rgba(167,139,250,.16), transparent 55%),
          radial-gradient(900px 520px at 50% 120%, rgba(110,231,255,.10), transparent 60%),
          linear-gradient(180deg, var(--bg), var(--bg2));
      }
      a{color:inherit; text-decoration:none}
      .wrap{min-height:100%; display:flex; flex-direction:column}
      main{flex:1; width:min(1120px, calc(100% - 32px)); margin: 0 auto; padding: 28px 0 48px;}
      .section{margin-top: 34px}
      .h1{font-size: clamp(34px, 4vw, 52px); line-height:1.06; letter-spacing:-.02em; margin:0}
      .lead{font-size: 16.5px; line-height:1.6; color: var(--muted); margin: 14px 0 0}
      .grid3{display:grid; gap:14px; grid-template-columns: repeat(3, minmax(0, 1fr));}
      .grid2{display:grid; gap:16px; grid-template-columns: 1.2fr 1fr;}
      .card{
        background: linear-gradient(180deg, rgba(255,255,255,.07), rgba(255,255,255,.04));
        border: 1px solid var(--line);
        border-radius: var(--r);
        box-shadow: var(--shadow);
        padding: 16px;
      }
      .pill{
        display:inline-flex; align-items:center; gap:8px;
        padding: 6px 10px;
        border-radius: 999px;
        background: rgba(110,231,255,.10);
        border: 1px solid rgba(110,231,255,.22);
        color: rgba(231,234,240,.92);
        font-size: 12.5px;
      }
      .muted{color:var(--muted)}
      .divider{height:1px; background: var(--line); margin: 18px 0}
      .kicker{font-size:12.5px; letter-spacing:.12em; text-transform:uppercase; color: rgba(231,234,240,.72)}
      .btn{
        display:inline-flex; align-items:center; justify-content:center; gap:10px;
        height: 44px; padding: 0 16px;
        border-radius: 999px;
        border: 1px solid rgba(255,255,255,.14);
        background: rgba(255,255,255,.06);
        color: var(--text);
        transition: transform .12s ease, background .12s ease, border-color .12s ease;
        cursor:pointer;
      }
      .btn:hover{transform: translateY(-1px); background: rgba(255,255,255,.09); border-color: rgba(255,255,255,.22)}
      .btn.primary{
        background: linear-gradient(90deg, rgba(110,231,255,.18), rgba(167,139,250,.16));
        border-color: rgba(110,231,255,.25);
      }
      .btn.primary:hover{background: linear-gradient(90deg, rgba(110,231,255,.24), rgba(167,139,250,.20));}
      @media (max-width: 920px){
        .grid2{grid-template-columns: 1fr;}
      }
      @media (max-width: 840px){
        .grid3{grid-template-columns: 1fr;}
        main{padding: 18px 0 34px;}
      }
    </style>
  </head>
  <body>
    <div class="wrap">
      <Header />
      <main>
        <slot />
      </main>
      <Footer />
    </div>
  </body>
</html>
